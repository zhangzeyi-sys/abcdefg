{
  "system_info": {
    "system_name": "MovieReviewPro 在线电影评价系统",
    "version": "1.0.0",
    "launch_time": "2024-01-01 00:00:00",
    "status": "running",
    "core_features": [
      "电影信息管理",
      "用户交互评价",
      "用户中心",
      "搜索与推荐",
      "后台管理",
      "商业化对接"
    ],
    "api_config": {
      "third_party_movie_db": [
        {
          "name": "IMDb API",
          "is_enabled": true,
          "api_key": "default_init_key",
          "sync_frequency": "24h"
        },
        {
          "name": "猫眼电影 API",
          "is_enabled": true,
          "api_key": "default_init_key",
          "sync_frequency": "12h"
        }
      ],
      "ticket_platform": [
        {
          "name": "猫眼票务",
          "is_enabled": true,
          "jump_url": "https://maoyan.com/ticket"
        },
        {
          "name": "淘票票",
          "is_enabled": true,
          "jump_url": "https://www.taopiaopiao.com"
        }
      ]
    }
  },

  "movie_data_structure": {
    "base_info": {
      "required_fields": [
        "movie_id",
        "title_cn",
        "title_en",
        "director",
        "screenwriter",
        "cast",
        "genre",
        "country",
        "language",
        "release_date",
        "duration",
        "rating",
        "production_company",
        "synopsis"
      ],
      "optional_fields": [
        "alternate_title",
        "film_score",
        "box_office",
        "awards"
      ]
    },
    "media_resources": {
      "poster": {
        "sizes": ["300x450", "600x900", "1200x1800"],
        "storage_path": "/static/movies/posters/"
      },
      "trailer": {
        "formats": ["mp4", "webm"],
        "storage_path": "/static/movies/trailers/",
        "max_duration": "180s"
      },
      "stills": {
        "storage_path": "/static/movies/stills/",
        "max_count": 50
      }
    },
    "related_info": {
      "series_movie": {
        "link_field": "series_id",
        "display_label": "同系列电影"
      },
      "person_works": {
        "link_field": "person_id",
        "types": ["actor", "director", "screenwriter"]
      }
    }
  },

  "user_data_structure": {
    "base_info": {
      "required_fields": [
        "user_id",
        "username",
        "avatar",
        "phone",
        "email",
        "register_time",
        "status"
      ],
      "optional_fields": [
        "signature",
        "birthdate",
        "gender",
        "movie_preference"
      ]
    },
    "behavior_data": {
      "watch_list": {
        "types": ["watched", "want_watch", "watching"],
        "record_fields": ["movie_id", "add_time", "rating", "comment_id"]
      },
      "collection": {
        "types": ["movie", "review"],
        "record_fields": ["target_id", "add_time", "type"]
      },
      "social": {
        "follow": ["followed_user_id", "follow_time"],
        "fans": ["fan_user_id", "follow_time"],
        "dynamic": ["dynamic_id", "content", "publish_time", "like_count"]
      }
    },
    "member_config": {
      "levels": ["normal", "vip", "svip"],
      "vip_benefits": [
        "ad_free",
        "review_priority",
        "exclusive_avatar_frame",
        "early_score_view",
        "exclusive_content"
      ],
      "price": {
        "vip_monthly": 19.9,
        "vip_yearly": 199,
        "svip_monthly": 39.9,
        "svip_yearly": 365
      }
    }
  },

  "review_data_structure": {
    "rating": {
      "total_score": {
        "scale": "1-5",
        "calculation": "weighted_average",
        "exclude_rule": "extreme_score(<=1 or >=5, count<3)"
      },
      "dimension_score": {
        "dimensions": ["plot", "acting", "visual", "music", "effects"],
        "scale": "1-5",
        "display_type": "radar_chart"
      },
      "rating_reason": {
        "default_options": [
          "剧情紧凑",
          "演技炸裂",
          "画面精美",
          "配乐贴合",
          "特效震撼",
          "剧情拖沓",
          "演技尴尬",
          "逻辑混乱"
        ],
        "allow_custom": true
      }
    },
    "review": {
      "long_review": {
        "min_length": 200,
        "editor_features": ["image", "emoji", "paragraph", "bold", "italic"],
        "interact_fields": ["like_count", "collect_count", "comment_count", "report_count"]
      },
      "short_review": {
        "max_length": 140,
        "hot_display_rule": "sort_by_like",
        "spoiler_tag": {
          "auto_detect": true,
          "display_text": "点击查看剧透"
        }
      },
      "review_audit": {
        "illegal_keywords_path": "/config/illegal_keywords.txt",
        "audit_status": ["pending", "passed", "rejected", "deleted"]
      }
    }
  },

  "search_recommend_config": {
    "search": {
      "search_fields": ["movie_title", "director", "cast", "genre", "release_year", "country"],
      "associate": {
        "enable": true,
        "max_suggestions": 10,
        "history_record": {
          "max_count": 20,
          "expire_days": 30
        }
      },
      "advanced_filter": {
        "default_filters": [
          {
            "field": "genre",
            "type": "multiple_choice"
          },
          {
            "field": "release_year",
            "type": "range"
          },
          {
            "field": "rating",
            "type": "range",
            "range_options": ["0-5", "5-6", "6-7", "7-8", "8-9", "9-10"]
          }
        ]
      }
    },
    "recommend": {
      "algorithms": [
        {
          "name": "collaborative_filtering",
          "enable": true,
          "label": "喜欢这部的人也喜欢"
        },
        {
          "name": "content_based",
          "enable": true,
          "label": "基于你的观影偏好"
        }
      ],
      "scenario_recommend": {
        "scenarios": [
          "weekend_comedy",
          "rainy_day_healing",
          "couple_date_love",
          "holiday_epic"
        ],
        "update_frequency": "7d"
      },
      "ranking_lists": [
        {
          "name": "weekly_hot",
          "update_frequency": "1d",
          "sort_field": "view_count"
        },
        {
          "name": "monthly_high_score",
          "update_frequency": "1d",
          "sort_field": "average_rating"
        },
        {
          "name": "annual_box_office",
          "update_frequency": "1d",
          "sort_field": "box_office"
        }
      ],
      "new_movie": {
        "display_days_before_release": 30,
        "countdown_display": true,
        "pre_sale_link": true
      }
    }
  },

  "backend_management_config": {
    "content_audit": {
      "review_audit": {
        "auto_check": true,
        "manual_check_threshold": {
          "report_count": 5,
          "sensitive_word_hit": 3
        },
        "audit_log_path": "/logs/audit/review_audit.log"
      },
      "movie_info_audit": {
        "auto_sync_audit": true,
        "manual_audit_fields": ["synopsis", "poster", "trailer"],
        "audit_log_path": "/logs/audit/movie_audit.log"
      }
    },
    "user_management": {
      "user_status": ["normal", "warned", "banned", "frozen"],
      "elite_user_tag": {
        "conditions": [
          "review_count >= 50",
          "average_like_count >= 100",
          "no_illegal_record"
        ],
        "benefits": ["homepage_recommend", "exclusive_badge"]
      },
      "user_log_path": "/logs/user/user_management.log"
    },
    "data_analysis": {
      "operation_data": {
        "metrics": ["DAU", "MAU", "review_count", "search_count"],
        "report_cycle": ["daily", "weekly", "monthly"],
        "report_path": "/data/reports/operation/"
      },
      "user_behavior": {
        "analysis_fields": ["search_preference", "genre_preference", "interaction_behavior"],
        "report_cycle": ["weekly"],
        "report_path": "/data/reports/user_behavior/"
      }
    },
    "system_maintenance": {
      "function_switch": {
        "short_review": true,
        "third_party_share": true,
        "member_service": true
      },
      "advertisement": {
        "ad_positions": ["home_banner", "movie_detail_sidebar", "review_page_top"],
        "max_display_count": 3,
        "ad_log_path": "/logs/advertisement/ad_management.log"
      },
      "error_log": {
        "log_path": "/logs/system/error.log",
        "max_size": "100MB",
        "backup_count": 10
      }
    }
  },

